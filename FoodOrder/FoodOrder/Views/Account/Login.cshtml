@using FoodOrder.Models
@model LoginViewModel

@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<section class="login_area">
    <div class="container">
        <div class="row">

            <div class="col-lg-7">
                <a style="margin-top:15px; margin-bottom:20px" href="/" class="learn_btn wow fadeInLeft" data-wow-delay="0.7s"><i class="ti-arrow-left"></i>На главную страницу</a>
                <div class="login_info">

                    <h2 class="f_p f_700 f_size_40 t_color3 mb_20">Вход</h2>


                    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()

                        @Html.ValidationSummary(true)

                        <div class="form-group text_box">
                            <input name="Email" type="text" placeholder="Введите почту или телефон">
                        </div>
                        <div class="form-group text_box">

                            <input name="Password" type="password" placeholder="Введите пароль">
                        </div>
                        <div class="extra">

                            <!--//check-box-->
                            <div class="forgotten-password">
                                <a href="#">Забыли пароль?</a>
                            </div>
                        </div>
                        <button style="margin-bottom:50px" type="submit" class="btn_three">Войти</button>

                    }
                </div>
            </div>
            <div style="margin-bottom:35px" class="col-lg-4 d-flex align-items-center" >
                
                    <div class="mobile_img" style="background-image:linear-gradient(to top, rgba(61, 26, 22, 0), rgba(61, 26, 22, 0.6))">
                        <div class="pp-scrollable p-table section section-1" data-page-index="0">
                            <div class="scroll-wrap">
                               
                                <div class="p-section-bg" style="z-index:1;background-image:url(./img/Home-color/first_bg.jpg);">
                                    
                                    <p class="pLog" style="margin-left: 135px;font-weight: 700;font-size:40px;margin-top: 183px;color: white;">  Личный кабинет </p>
                                    <p class="pSubLog" style="font-weight: 500;font-size:25px;margin-top: 0px;color: white;">  Вход для клиентов </p>
                                </div>

                            </div>
                        </div>
                        
                        <img class="mobile wow fadeInRight" data-wow-delay="0.1s" src="~/Content/img/mobile.png" alt="">
                       
                    </div>
               
            </div>
        </div>
    </div>
</section>

