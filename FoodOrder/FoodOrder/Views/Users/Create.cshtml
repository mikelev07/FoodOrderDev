@model FoodOrder.Models.UserViewModel

@{
    ViewBag.Title = "Добавление сотрудника компании";
    Layout = "~/Views/Shared/_LayoutSystem.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <main>
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">

                    <h1>Добавление нового сотрудника</h1>

                    <div class="separator mb-5"></div>

                </div>
            </div>

            <div class="row">

                <div class="col-12 col-lg-6 mb-5">

                    <div class="card mb-4">
                        <div class="card-body">
                            <h5 class="mb-4">Форма создания</h5>
                            <form class="needs-validation tooltip-label-right" novalidate>

                                <div class="form-group position-relative error-l-50">
                                    <label>Имя сотрудника</label>
                                    <input name="Name" type="text" class="form-control" required>
                                    <div class="invalid-tooltip">
                                        Укажите имя!
                                    </div>
                                </div>

                                <div class="form-group position-relative error-l-50">
                                    <label>Фамилия сотрудника</label>
                                    <input name="SecondName" type="text" class="form-control" required>
                                    <div class="invalid-tooltip">
                                        Укажите фамилию!
                                    </div>
                                </div>

                                <div class="form-group position-relative error-l-50">
                                    <label>Отчество сотрудника</label>
                                    <input name="Patronymic" type="text" class="form-control">
                                </div>

                                <div class="form-group position-relative error-l-50">
                                    <label>Возраст сотрудника</label>
                                    <input name="Age" type="text" class="form-control">
                                </div>

                                <div class="form-group position-relative error-l-50">
                                    <label>Электронная почта</label>
                                    <input name="Email" type="text" class="form-control" required>
                                    <div class="invalid-tooltip">
                                        Укажите корректную электронную почту!
                                    </div>
                                </div>

                                <div class="form-group position-relative error-l-50">
                                    <label>Номер телефона</label>
                                    <input name="PhoneNumber" type="text" class="form-control" required>
                                    <div class="invalid-tooltip">
                                        Укажите корректный номер телефона!
                                    </div>
                                </div>

                                <button type="submit" class="btn btn-primary mb-0">Подтвердить</button>
                            </form>
                        </div>
                    </div>
                </div>


            </div>

        </div>
    </main>
}
