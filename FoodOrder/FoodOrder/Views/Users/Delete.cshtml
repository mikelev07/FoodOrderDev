@model FoodOrder.Models.UserViewModel

@{
    Layout = "~/Views/Shared/_LayoutSystem.cshtml";
    ViewBag.Title = "Удаление сотрудника";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <main>
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">

                    <h1>Удаление сотрудника</h1>

                    <div class="separator mb-5"></div>

                </div>
            </div>

            <div class="row">

                <div class="col-12 col-lg-6 mb-5">

                    <div class="card mb-4">
                        <div class="card-body">
                            <h5 class="mb-4">Форма удаления</h5>
                            <form class="needs-validation tooltip-label-right" novalidate>
                                <div class="form-group position-relative">
                                    <label><strong>Имя сотрудника</strong></label>
                                    @Html.DisplayNameFor(model => model.Name)
                                </div>

                                <div class="form-group position-relative">
                                    <label><strong>Фамилия сотрудника</strong></label>
                                    @Html.DisplayFor(model => model.Surname)
                                </div>

                                <div class="form-group position-relative">
                                    <label><strong>Почта сотрудника</strong></label>
                                    @Html.DisplayNameFor(model => model.Email)
                                </div>

                                <div class="form-group position-relative">
                                    <label><strong>Телефон сотрудника</strong></label>
                                    @Html.DisplayFor(model => model.PhoneNumber)
                                </div>

                                <input type="submit" value="Подтвердить удаление" class="btn btn-primary mb-0" />

                            </form>
                        </div>
                    </div>
                </div>


            </div>

        </div>
    </main>
}