@model FoodOrder.Models.UserViewModel

@{
    ViewBag.Title = "Редактирование данных сотрудника";
    //Layout = "~/Views/Shared/_LayoutSystem.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <main>
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">

                    <h1>Редактирование сотрудника</h1>

                    <div class="separator mb-5"></div>

                </div>
            </div>

            <div class="row">

                <div class="col-12 col-lg-6 mb-5">

                    <div class="card mb-4">
                        <div class="card-body">
                            <h5 class="mb-4">Форма редактирования</h5>
                            <form class="needs-validation tooltip-label-right" novalidate>
                                <div class="form-group position-relative error-l-50">
                                    @Html.LabelFor(model => model.SecondName, "Имя")
                                    @Html.EditorFor(model => model.SecondName, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                                    <div class="invalid-tooltip">
                                        Укажите фамилию!
                                    </div>
                                </div>

                                <div class="form-group position-relative error-l-50">
                                    @Html.LabelFor(model => model.UserName, "Имя")
                                    @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                                    <div class="invalid-tooltip">
                                        Укажите имя!
                                    </div>
                                </div>

                                <div class="form-group position-relative error-l-50">
                                    @Html.LabelFor(model => model.Email, "Email")
                                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", required="required" } })
                                    <div class="invalid-tooltip">
                                        Укажите корректную электронную почту!
                                    </div>
                                </div>

                                <div class="form-group position-relative error-l-50">
                                    @Html.LabelFor(model => model.PhoneNumber, "Телефон")
                                    @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control", required="required"} })
                                    <div class="invalid-tooltip">
                                        Укажите корректный номер телефона!
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-primary mb-0">Подтвердить изменения</button>
                            </form>
                        </div>
                    </div>
                </div>


            </div>

        </div>
    </main>
}
